<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.flowlayout.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <com.example.flowlayoutlib.FlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#A0A0"
        android:padding="5dp"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="hello1"
            android:background="#A00A"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="hello2"
            android:background="#AA00" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="hello3"
            android:background="#A00A"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="hello4"
            android:background="#AA00"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="hello5"
            android:background="#A00A"/>

        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="hello6"
            android:background="#AA00"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="hello7"
            android:background="#A00A"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="hello8"
            android:background="#AA00"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="hello9"
            android:background="#A00A"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="hello10"
            android:background="#AA00"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="hello11"
            android:background="#A00A"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="hello12"
            android:background="#AA00"/>
    </com.example.flowlayoutlib.FlowLayout>
</LinearLayout>
